
<div class="index-container">
  <div class="index-container-column">
    <div class="index-container-column-1">
      SideBar
      <%= render 'shared/sidebarfilter' %>
    </div>
    <div class="index-container-column-2">
      <div class="header d-flex align-items-center justify-content-between">
          <div class="d-flex align-items-baseline">
            <h2 class="booking-provider-h2 pr-2"><%= @booking_place.name %> </h2>
            <h3 class="booking-provider-h3"><%= @booking_place.country.name if @booking_place.class == City %></h3>
          </div>
          <div class="align-items-center">
            <span class="badge badge-secondary badges-booking-provider"> Oceania </span>
            <span class="badge badge-secondary badges-booking-provider"> January </span>
            <span class="badge badge-secondary badges-booking-provider"> Urban </span>
            <span class="badge badge-secondary badges-booking-provider"> Culture </span>
          </div>
      </div>
      <div class="row">
        <%  @bookingproviders.each do |bookingprovider| %>
          <div class="m-2">
            <%= render partial: 'shared/bookingprovidercard', locals: { bookingprovider: bookingprovider } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
