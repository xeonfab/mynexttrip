function refreshFeatureForm(innerHTML) {
  const newFeatureForm = document.getElementById('feature-filter-container');
  newFeatureForm.innerHTML = innerHTML;
}

function refreshIndex(innerHTML) {
  const newIndex = document.getElementById('indexcontainer');
  newIndex.innerHTML = innerHTML;
}

refreshFeatureForm('<%= j render "shared/feature-filter-container", cities: @cities %>');

refreshIndex('<%= j render "shared/indexcontainer" %>');

window.initMapbox();
