  <div class="city-card">

     <img class="city-card-image" src="https://source.unsplash.com/random/500x500/?city" />
    <% if (city.photos.length > 0) %>
      <%= cl_image_tag city.photos.first.key, class: "city-card-image"  %>
    <% end %>

    <h3 class="city-card-temp">25Â°C</h3>
    <div class="city-card-content">
        <h2 class="city-card-title"> <%= city.name %></h2>
        <h3 class="city-card-country"><%= city.country.name %></h3>
    </div>
  </div>
<% end %>
