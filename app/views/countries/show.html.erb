<%= render 'shared/bannercountry' %>

<div class="container-show container mt-5">
 <div class="row">
    <div class="container-show-inner col-md-9">
      <div>
        <h2>Cost of Living</h2>
          <div class="card">
            Cost of Living Input
          </div>
      </div>
      <div>
         <h2>Climate</h2>
          <div class="card">
            Climate Input
          </div>
      </div>
      <div class="row">
        <div class="col-6">
          <h2>Environment Quality</h2>
          <div class="card p-3">
            <div class="row">
                  <div class="col-md-8">
                    Air quality
                  </div>
                  <div class="col-md-4 text-right">
                    <span class="badge badge-success">Very good</span>
                  </div>
              </div>
               <div class="row">
                  <div class="col-md-8">
                    Drinking water quality
                  </div>
                  <div class="col-md-4 text-right">
                    <span class="badge badge-success">Very good</span>
                  </div>
              </div>
               <div class="row">
                  <div class="col-md-8">
                    Cleanliness
                  </div>
                  <div class="col-md-4 text-right">
                    <span class="badge badge-success">Very good</span>
                  </div>
              </div>
          </div>

        </div>
        <div class="col-6">
          <h2>Safety</h2>
          <div class="card p-3">
            <div class="row">
                  <div class="col-md-8">
                    Crime Rate
                  </div>
                  <div class="col-md-4 text-right">
                    <span class="badge badge-success">Very good</span>
                  </div>
              </div>
               <div class="row">
                  <div class="col-md-8">
                   Sex Rate
                  </div>
                  <div class="col-md-4 text-right">
                    <span class="badge badge-danger">Very Expensive</span>
                  </div>
              </div>
          </div>
        </div>
      </div>
      <div class="col">
        <h2 class="my-3">Cities of <%= @country.name %></h2>
        <div class="row">
          <%  @cities.each do |city| %>
            <div class="col-md-3 mb-3">
              <%= render partial: 'shared/citycard', locals: { city: city } %>
            </div>
          <% end %>
      </div>


       </div>
      <div class="col">
          <div
          id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
      </div>

    </div>
    <div class="col-md-3">
      <div>
        <div class="card p-3 mb-5">
          <h2>X booking providers</h2>
          <h3>available for your travel</h3>
          <%= link_to "Booking providers", city_booking_providers_path(:id) , class: "btn-main-pink large" %>
        </div>

      </div>
      <div>
        <div data-skyscanner-widget="SearchWidget"></div>
        <script src="https://widgets.skyscanner.net/widget-server/js/loader.js" async></script>
      </div>
    </div>

  </div>
</div>




