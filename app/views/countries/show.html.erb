<%= render 'shared/bannercountry' %>

<div class="container-show">
 <div class="row">
    <div class="container-show-inner"></div>
    <div class="col-9">
      <div class="col">
        <h2>Cost of Living</h2>
          <div class="card">
            Cost of Living Input
          </div>

      </div>
      <div class="col">
         <h2>Climate</h2>
          <div class="card">
            Climate Input
          </div>
      </div>
      <div class="row">
        <div class="col-6">
          <h2>Environment Quality</h2>
          <div class="card">
            Environment Input
          </div>

        </div>
        <div class="col-6">
          <h2>Safety</h2>
          <div class="card">
            Safety Input
          </div>
        </div>
      </div>
      <div class="col">
        <h2>Safety</h2>
        <div class="index-grid">
          <%  @cities.each do |city| %>
            <%= render partial: 'shared/citycard', locals: { city: city } %>
          <% end %>
      </div>


       </div>
      <div class="col">
          <div
          id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
      </div>

    </div>
    <div class="col-3">
      <div>
        <div class="card">
          <h2>X booking providers</h2>
          <h3>available for your travel</h3>
          <%= link_to "Booking providers", city_booking_providers_path(:id) , class: "btn-main-pink large" %>
        </div>

      </div>
      <div>
        <div data-skyscanner-widget="SearchWidget"></div>
        <script src="https://widgets.skyscanner.net/widget-server/js/loader.js" async></script>
      </div>
    </div>

  </div>
</div>




