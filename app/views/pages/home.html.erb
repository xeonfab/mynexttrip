<div class="container mt-5">
  <div class="row">
    <%  @regions.each do |region| %>
      <div class="col-md-3 mb-3">
        <%= render partial: 'shared/regioncard', locals: { region: region } %>
      </div>
    <% end %>
  </div>
  <div class="container my-5">
      <div class="row align-items-center">
        <div class="col-4 text-center">
          <div>
            <img class="home-thumbnail" src="https://source.unsplash.com/random/500x500/?lama" / alt="home">
            <h5>Personalized Experiences</h5>
          </div>
        </div>
        <div class="col-4 text-center">
          <div>
            <img class="home-thumbnail" src="https://source.unsplash.com/random/500x500/?lama" / alt="home">
            <h5>Photos and practical information inspiring you</h5>
          </div>
        </div>
        <div class="col-4 text-center">
          <div>
            <img class="home-thumbnail" src="https://source.unsplash.com/random/500x500/?lama" / alt="home">
            <h5>Booking Partners</h5>
          </div>
        </div>
      </div>
  </div>
  <div class="index-grid">
    <%  @cities.each do |city| %>
      <%= render partial: 'shared/citycard', locals: { city: city } %>
    <% end %>
  </div>
  <br>
  <div class="index-grid">
    <%  @countries.each do |country| %>
      <%= render partial: 'shared/countrycard', locals: { country: country } %>
    <% end %>
  </div>
</div>

<%= simple_form_for :filter_results, url: cities_path, method: :get do |f| %>
  <%= f.input :themes, collection: %w[Skiing Romantic City Beach Culture], input_html: { multiple: true }, as: :check_boxes %>
  <%= f.input :month, input_html: {required: true}, collection: %w(January February March April May June July August September October November December) %>
  <%= f.button :submit, "search", class: "btn btn-flat"%>
<% end %>

